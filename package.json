{
  "name": "dot-pixel-canvas",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "supabase:start": "pnpm --filter @dot-pixel-canvas/supabase start",
    "supabase:stop": "pnpm --filter @dot-pixel-canvas/supabase stop",
    "supabase:migrate": "pnpm --filter @dot-pixel-canvas/supabase migrate",
    "supabase:reset": "pnpm --filter @dot-pixel-canvas/supabase reset",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  }
}
